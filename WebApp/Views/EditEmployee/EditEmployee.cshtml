<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Edit employee</title>
    <link href="~/Content/CustomStyles.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/CustomScripts/EditEmployeeScript.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function ()
        {
            $("#firstName").val("@ViewBag.Employee.FirstName");
            $("#lastName").val("@ViewBag.Employee.LastName");
            $("#patronymic").val("@ViewBag.Employee.Patronymic");
            $("#dayBirth").val(@ViewBag.Employee.Birthday.Day).attr("selected");
            $("#monthBirth").val(@ViewBag.Employee.Birthday.Month - 1).attr("selected");
            $("#yearBirth").val(@ViewBag.Employee.Birthday.Year).attr("selected");
            $("#educationLevel").val("@ViewBag.Employee.EducationLevel").attr("selected");
            $("#educationDegree").text("@ViewBag.Employee.EducationDegree");
        });
    </script>
</head>
<body>
    <div class="d-flex align-items-center min-vh-100">
        <div class="container mb-5">
            <div class="card mx-auto w-100 pr-3 pl-3" id="card-body">
                <div class="card-body">
                    <div class="text-white text-center">
                        <h2 class="mt-3 mb-3">Add new employee</h2>
                    </div>
                    <div id="employeeId" hidden>@ViewBag.Employee.EmployeeId</div>
                    <div class="col-lg-12 order-md-1 text-white">
                        <h4>Fill the forms below</h4>
                        <form>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="firstName">First name</label>
                                    <input type="text" class="form-control" id="firstName" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="lastName">Last name</label>
                                    <input type="text" class="form-control" id="lastName"  />
                                    <div class="invalid-feedback">Valid last name is required.</div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="patronymic">Patronymic (Optional)</label>
                                    <input type="text" class="form-control" id="patronymic"  />
                                    <div class="invalid-feedback">Valid last name is required.</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="Birthday">Birthday</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-3 mr-">
                                    <select class="custom-select d-block w-100" id="dayBirth" >
                                        <option>Day</option>
                                    </select>
                                    <div class="invalid-feedback">Please enter a day.</div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <select class="custom-select d-block w-100" id="monthBirth" >
                                        <option>Month</option>
                                    </select>
                                    <div class="invalid-feedback">Please enter a month.</div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <select class="custom-select d-block w-100" id="yearBirth" >
                                        <option>Year</option>
                                    </select>
                                    <div class="invalid-feedback">Please enter a year.</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="Education">Education</label>
                                    <select class="custom-select d-block w-100" id="educationLevel" >
                                        <option>Select education</option>
                                        <option value="None">None</option>
                                        <option value="Secondary">Secondary</option>
                                        <option value="Specialized Secondary">Specialized Secondary</option>
                                        <option value="Higher">Higher</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="EducationDegree">Education Degree</label>
                                    <textarea class="form-control" id="educationDegree"></textarea>
                                    <div class="invalid-feedback">Valid education degree is required.</div>
                                </div>
                            </div>
                            <div class="row mt-sm-1 mt-lg-3">
                                <div class="col-12">
                                    <button class="btn btn-primary mr-4" type="button" id="buttonOk">OK</button>
                                    <button class="btn btn-primary mr-4" onclick="location = 'http://localhost:52482/MainPage/Index';" type="button" id="buttonCancel">Cancel</button>
                                    <button class="btn btn-primary mr-4" type="button" id="buttonDelete">Delete employee</button>
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                <a class="text-muted ">© 2020</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>